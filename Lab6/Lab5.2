#include<stdio.h>
int main(){
    int i, j, l, y;
    printf( "Input yourline: " ) ;
    scanf( "%d", &j) ;
    for ( i = 0; i < j; i++)
    {
        for ( y = 0; y < i; y++)
        {
                printf( " " ) ;
        }        
        for ( l = j-i ; l > 0 ; l--)
        {
            printf( "*" ) ;
        }        
        printf( "\n" ) ;
    }//end for
    return 0 ;
}// end function